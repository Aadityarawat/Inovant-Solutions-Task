<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start|center"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once Collection Weekly"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="50dp"
            android:src="@drawable/heart"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_gravity="end|center"
            android:layout_marginEnd="25dp"
            android:src="@drawable/upload"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center"
            android:src="@drawable/shoppingbag"
            />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="442dp"
                    android:layout_weight="1"
                    />

                <me.relex.circleindicator.CircleIndicator3
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:id="@+id/indicator"
                    android:background="#FFFFFF"
                    app:ci_drawable="@drawable/tab_indicator_selected"
                    app:ci_drawable_unselected="@drawable/tab_indicator_default"
                    app:ci_height="7dp"
                    app:ci_width="7dp"
                    />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANESTHESIA"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.50 KWD"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Once Collection Weekly"
                    android:textColor="#888383"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textSize="12dp"
                    android:text="SKU: anesthesia-once-collection-weekly"
                    android:textColor="#B3ACAC"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="105dp"
                    android:text="Color:"
                    android:textColor="#90323131"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="155dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="2dp"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="2dp"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:layout_margin="2dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:layout_margin="2dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:layout_margin="2dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/photo_bg_card"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            android:layout_margin="2dp"
                            app:shapeAppearanceOverlay="@style/roundedImage"
                            android:background="@drawable/circle_image"
                            android:src="@drawable/eye"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="235dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_border">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="or 4 interest-free payments"
                            android:textSize="11sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.88 KWD"
                                android:textSize="11sp"
                                android:layout_marginTop="36dp"
                                android:layout_marginStart="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/learn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learn More"
                                android:layout_marginTop="36dp"
                                android:layout_marginStart="70dp"
                                android:textSize="11sp"
                                android:textColor="@color/black"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_gravity="end|center"
                            android:layout_margin="20dp"
                            android:backgroundTint="#02EDA3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ŧabby"
                                android:textColor="#000C39"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_margin="5dp"/>
                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#989898"
                        android:text="Quantity"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/minus"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:background="#787777"
                                android:layout_gravity="center"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/quantity_bg_border"
                            >
                            <TextView
                                android:id="@+id/quntity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:text="1"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/add"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:background="@color/black"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:textSize="18dp"
                            android:text="PRODUCT INFORMATION"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:id="@+id/updown"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:layout_gravity="end"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/descriptiontv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="#989898"
                        android:text="Loading..."
                        android:textSize="12dp"
                        />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blackborder"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/black"
            android:text="Add to bag"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>